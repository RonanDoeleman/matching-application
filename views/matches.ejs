<!doctype html>

<head>
    <link rel="stylesheet" type="text/css"   href="/css/style.css"> 
    <link rel="stylesheet" href="https://use.typekit.net/jkf5pko.css">       
    <title>Matching Application</title>
</head>

<body>
    <%- include('includes/header'); -%>

    <section class="matches-page">
        <% if(profile) { %> 
        <h1>Hi <%= profile.name %>,</h1>
      
        <h2>Hier kan je potentiÃ«le matches vinden!</h2>

        <div class="potential-match">
                <% if (potentialMatches && potentialMatches.length > 0) { %>
                    <% potentialMatches.forEach(match => {%>
                   
                        <div class="match-card" >
                            <div class="image-container">
                                <img src="<%= match.image %>" alt="profile picture match"></img>
                            </div>
                            <div class="profile-metadata">
                                <h2><%= match.name %></h2>
                                <p><%= match.location %>, <%= match.age %></p>
                                <p><span>Bio: </span> "<%= match.bio %>"</p>
                                <p><span>Genres: </span><%= match.favgenres.join(", ") %></p>
                                <p><span>Festivals: </span> <%= match.favfestivals.join(", ") %></p>
                                <div class="track">
                                    <img src="/images/playbutton.png" alt="playbutton">
                                    <p><%= match.favtrack %></p>
                                </div>
                            </div>
                            <form action="/matches/match" method="post" class="button-container">
                                <button class="dislike-button" type="submit" value="<%= match.id %>" name="matchButtonDislike" >
                                    <img src="/images/close.png" alt="dislike button" />
                                </button>
                                <button class="like-button" type="submit" value="<%= match.id %>" name="matchButtonLike">
                                    <img src="/images/heart.png" alt="like"/>
                                    
                                </button>
                            </form>
                        </div>
                    
                    <% }) %>
                    <% } else { %>
    
                    <p>There are no new matches available right now...</p>
                    <% } %>

         </div>        
         <%} %> 
    </section>
    
    <%- include('includes/footer.ejs'); -%>
</body>